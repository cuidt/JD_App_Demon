<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jd.com.jd_app_demon.fragment.xqfragment.GoodsFragment">

     <com.youth.banner.Banner
         android:id="@+id/xq_banner"
         android:layout_width="match_parent"
         android:layout_height="1350px">
     </com.youth.banner.Banner>

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
               <TextView
                   android:drawableLeft="@mipmap/zy"
                   android:layout_marginTop="20px"
                   android:textColor="#080000"
                   android:id="@+id/xq_name"
                   android:layout_marginLeft="10px"
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/xq_subhead"
                   android:layout_marginTop="10px"
                   android:layout_marginLeft="10px"
                   android:textColor="#f40505"
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="15px"
                   android:id="@+id/xq_price"
                   android:textSize="40px"
                   android:layout_marginLeft="10px"
                   android:textColor="#f40505"
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
          </LinearLayout>
     </ScrollView>

</LinearLayout>
